
<Cashier>:
    #anchor : id
    name: txt
    qty: qty

    canvas:
        Color:
            rgba: 0,0,0,.5
        Rectangle:
            #width, height
            pos:350,540
            size:730,180
        Color:
            rgba: 0,0,1,.1
        Rectangle:
            pos:0,0
            size:350,890

    Button:
        text: 'LOGOUT'
        pos: 925,20
        size: 150,50
        background_normal: ''
        background_down: ''
        background_color:(0/255,0/255,0/255,.5)


    #add a label where it will display the price after this on_press
    Button:
        text: 'punch'
        pos: 580,50
        size: 150,150
        on_press: root.name_validate(txt)
        on_press: root.btn()
    #add a label where it will display the price after this on_press

    Button:
        text: 'add to receipt'
        pos: 728,50
        size: 150,150
        on_press: root.Array_display(root.my_array)
        on_press: root.Array_display2(root.my_array2)
        on_press: root.Array_price(root.price_array)

    Label:
        id: header_label
        text: root.product_name
        pos: 500,600
        color: 1,1,1,1
        font_size: 24
        bold: True

    TextInput:
        id: qty
        #text: "hi"
        size:200,40
        #x,y
        pos: 650,300
        multiline: False
        on_text_validate: root.name_validate(self)
    TextInput:
        id: txt
        size:200,40
        #x,y
        pos: 650,370
        multiline: False
    Label:
        text: 'PRODUCT NAME'
        pos: 520,340
        color: 0,0,0,1
        font_size: 16
        bold: True
    Label:
        text: 'QUANTITY'
        pos: 520,270
        color: 0,0,0,1
        font_size: 16
        bold: True