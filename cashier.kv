<Cashier>:
    #anchor : id
    name: txt
    qty: qty

    #canvas:
        #Color: # Color for product name and price
            #rgba: 0,0,0,.5
        #Rectangle:
            #width, height #
            #pos:350,540
            #size:730,180
        #Color:
            #rgba: 0,0,1,.1
        #Rectangle:
            #pos:0,0
            #size:350,890

    FloatLayout:
        size: root.width, root.height

        Label:
            text: "Welcome, Cashier"
            bold: True
        Button: #Logout Button
            text: "LOGOUT"
            size_hint: None, None
            pos_hint: {"x": 0, "y": 0.1}
            size: 150, 50
            background_normal: ''
            background_down: ''
            background_color: (0/255,0/255,0/255,.5)

        Button:
            text: 'punch'
            pos_hint: {"x": 0.4, "y": 0.20}
            size_hint: None, None
            width: 300
            font_size: 35
            on_press: root.btn(txt)

        Button:
            text: 'Add to receipt'
            pos_hint: {"x": 0.4, "y": 0.30}
            width: 300
            font_size: 35
            color: 1,1,1,1
            on_press: root.Array_display(root.my_array)
            on_press: root.Array_display2(root.my_array2)
            on_press: root.Array_price(root.price_array)
            on_press: root.save()
            size_hint: None, None

        Label:
            id: header_label
            text: root.product_name
            color: 1,1,1,1
            font_size: 24
            bold: True
            size_hint: None, None

        MDTextField:
            id: qty
            multiline: False
            on_text_validate: root.name_validate(self)
            size_hint: None, None
            pos_hint: {"x": 0.4, "y": 0.60}
            font_size: 35
            width: 300
            hint_text: 'quantity'

        MDTextField:
            id: txt
            multiline: False
            size_hint: None, None
            pos_hint: {"x": 0.4, "y": 0.70}
            font_size: 35
            width: 300
            hint_text: 'product'

        Label:
            text: "product name"
            pos_hint: {"x": 0.2, "y": 0.30}
            font_size: 35
            size_hint: None, None

        Label:
            text: "quantity"
            pos_hint: {"x": 0.2, "y": 0.20}
            font_size: 35
            size_hint: None, None







