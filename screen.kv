<SplashWindow>:
    name: "splash"

    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Image:
            padding: 0
            source: "images/splashfinal.png"
            size_hint: None, None
            size: root.width, root.height
            allow_stretch: True
            keep_ratio: False

        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: dp(30)

            ProgressBar:
                id: progress_bar
                max: 100
                value: 0
                size_hint_x: None
                width: self.parent.width * 1
                height: dp(10)

<AdminLoginTry>:
    name: "login"

    MDCard:
        size_hint: None, None
        size: 400, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 5
        padding: 25
        spacing: 25
        orientation: "vertical"
        MDLabel:
            id: welcome_label
            text: "WELCOME BACK!"
            font_size: 15
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            #padding_y: 5

        MDLabel:
            id: login_label
            text: "Log into your account"
            font_size: 25
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            #padding_y: 15

        MDTextField:
            id: user
            hint_text: "Username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 15
            pos_hint: {"center_x": 0.5}
            md_round: True

        MDTextField:
            id: password
            hint_text: "Password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 15
            pos_hint: {"center_x": 0.5}
            md_round: True
            password: True

        MDRoundFlatButton:
            text: "Login"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: root.manager.current = "first"

        MDRoundFlatButton:
            text: "Clear"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: root.clear()

        Widget:
            size_hint_y: None
            height: 10




